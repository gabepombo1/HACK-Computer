/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    // Put your code here:
    Not(in=sel[0], out=notSelZero);
    Not(in=sel[1], out=notSelOne);
    And(a=notSelZero, b=notSelOne, out=isA);
    And(a=notSelZero, b=sel[1], out=isC);
    And(a=sel[0], b=notSelOne, out=isB);
    And(a=sel[0], b=sel[1], out=isD);

    And(a=in, b=isA, out=a);
    And(a=in, b=isB, out=b);
    And(a=in, b=isC, out=c);
    And(a=in, b=isD, out=d);

}